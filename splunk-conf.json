// [PackageDev] target_format: plist, ext: tmLanguage
{
    "name": "Splunk Conf file",
    "scopeName": "source.splunk-conf",
    "fileTypes": ["conf", "conf.example", "conf.default"],
    "uuid": "f0634410-b562-4325-b1d1-348949cfa5bd",

    "patterns": [
        {
            "match": "^# DO NOT EDIT THIS FILE\\!$",
            "name": "invalid.illegal",
            "comment": "default conf file warning"
        },
        {
            "match": "^#.*$",
            "name": "comment.line",
            "comment": "A comment"
        },
        {
            "match": "^\\[.*\\]$",
            "name": "entity.name.function.stanzaname",
            "comment": "Stanza Name, any line with '[xyz]'"
        },
        {
            "match": "^\\w+",
            "name": "support.function",
            "comment": "conf setting key"
        },
        {
            "match": "=",
            "name": "keyword.operator.stanzaname",
            "comment": "Equals Sign"
        }
    ]
}